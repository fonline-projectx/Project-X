            case ANIM2_DEAD_BURN_RUN:
                sound += "DeadBurnRun";
                break;
            default:
                break;
            }

            // Try play
            if(PlaySound(sound + ".wav"))
                return;

            // Try erase 'Front' / 'Back'
            uint len = 0;
            int  pos = findLast(sound, "Front");
            if(pos != -1)
                len = 5;
            else
            {
                pos = findLast(sound, "Back");
                if(pos != -1)
                    len = 4;
                else
                    continue;
            }
            sound.resize(sound.length() - len);

            if(PlaySound(sound + ".wav"))
                return;
        }
    }
}
